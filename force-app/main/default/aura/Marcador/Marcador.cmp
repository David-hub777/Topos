<aura:component controller="RandomApex">
    <aura:handler event="c:Puntuacion" action="{!c.manejarEvento}"/>
    <aura:attribute name="marcador" type="Integer" default="0"/>
	<h1>Marcador: {!v.marcador}</h1>
    <input type="button" name="boton" value="Sumar" onclick="{!c.sumar}"/>
    <input type="button" onclick="{!c.guardarScore}"/>
</aura:component>